html {
  font-size: 14px;
}

@media (min-width: 768px) {
  html {
    font-size: 16px;
  }
}

.btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
  box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
}

html {
  position: relative;
  min-height: 100%;
}

body {
  margin-bottom: 60px;
}

/* Header */
header {
  background-color: white;
  padding: 10px 0;
}

.navbar {
  background-color: white !important;
}

/* Logo */
.logo-img {
  height: 70px;
  width: auto;
  max-height: 70px;
  object-fit: contain;
}

/* Login Button */
.btn-login {
  background-color: #a3a3a3;
  border: none;
  color: #000;
  font-weight: bold;
  padding: 8px 25px;
}

.btn-login:hover {
  background-color: #878787;
}

/* Home Page */
.page-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: calc(100vh - 60px);
}

.home-container {
  width: 100%;
  max-width: 1200px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.welcome-text {
  color: #5b3f25;
  font-size: 48px;
  font-weight: bold;
  margin-bottom: 50px;
}

.sports-icons-container {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
}

.sport-icon {
  width: 150px;
  height: 400px;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.icon-silhouette {
  width: 80%;
  height: 70%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}

