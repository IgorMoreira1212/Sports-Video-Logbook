@model Sports_Video_Logbook.Models.SubmissaoTarefaViewModel
@{
    ViewData["Title"] = "Submeter Tarefa";
}
<div class="skills-card" style="max-width: 600px; margin: 0 auto;">
    <h2 style="color: #67432F; font-family: Georgia, serif; margin-bottom: 20px;">Submeter Tarefa</h2>
    <form asp-action="Submeter" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="TarefaId" />
        <div class="mb-3">
            <label asp-for="Texto" class="form-label">Texto da Submissão</label>
            <textarea asp-for="Texto" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="Texto" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Anexar ficheiros (imagens, vídeos, documentos)</label>
            <input asp-for="Ficheiros" type="file" class="form-control" multiple accept="image/*,video/*,.pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.txt" />
            <span asp-validation-for="Ficheiros" class="text-danger"></span>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="skills-modal-submit">SUBMETER</button>
            <a asp-action="MinhasTarefas" class="skills-modal-cancel">CANCELAR</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 