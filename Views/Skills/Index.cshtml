@model IEnumerable<Sports_Video_Logbook.Models.Skill>

@{
    ViewData["Title"] = "Skills";
}

<div class="skills-card">
    <div class="skills-header">
        <input id="searchSkill" type="text" class="skills-search" placeholder="Pesquisar" />
        <a asp-action="Create" class="skills-add-btn">ADICIONAR SKILL</a>
    </div>
    <table class="skills-table">
        <thead>
            <tr>
                <th class="skills-th">Skill</th>
                <th class="skills-th skills-th-action">Ação</th>
            </tr>
        </thead>
        <tbody id="skillsList">
        @foreach (var item in Model) {
            <tr class="skill-row">
                <td class="skills-td">@item.Nome</td>
                <td class="skills-td skills-td-action">
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="skills-remove-btn">REMOVER</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
<script>
    document.getElementById('searchSkill').addEventListener('input', function() {
        var filter = this.value.toLowerCase();
        var rows = document.querySelectorAll('#skillsList .skill-row');
        rows.forEach(function(row) {
            var skill = row.querySelector('.skills-td').textContent.toLowerCase();
            row.style.display = skill.includes(filter) ? '' : 'none';
        });
    });
</script>
}
